<!--pages/createTask/createTask.wxml-->

<form bindsubmit='formSubmit' class='page'>
    <view class='page__bd'>
        <view class="weui-cells__title">标题：</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="简洁的叙述求助内容" bindconfirm="setTitle" disabled="{{!canModify}}" value="{{title}}" name="title"/>
                </view>
            </view>
        </view>

        <view class="weui-cells__title">详细信息：</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">奖金(元)</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="selector" value="{{bountyIndex}}" range="{{bountyArray}}" bindchange="bindBountyChange" disabled='{{!canModify}}'>
                        <view class="weui-input">{{bountyArray[bountyIndex]}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">截止日期</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange" disabled='{{!canModify}}'>
                        <view class="weui-input">{{date}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">截止时间</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange" disabled='{{!canModify}}'>
                        <view class="weui-input">{{time}}</view>
                    </picker>
                </view>
            </view>
        </view>
        <view class="weui-cells__title">任务地点：</view>
        <view class="weui-cells weui-cells_after-title">
            <navigator bindtap='showLocation' class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view id="location" class="weui-cell__bd">{{location.name}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
        </view>

        <view class="weui-cells__title">任务详情</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="暂无" bindconfirm="setDescription" disabled='{{!canModify}}' value="{{description}}" name="desc" style="height: 4em" />
                </view>
            </view>
            <view class="weui-cell weui-cell_switch">
                <view class="weui-cell__bd">隐藏信息</view>
                <view class="weui-cell__ft">
                    <switch bindchange='bindSwitchChange' disabled='{{!canAccess}}'/>
                </view>
            </view>
            <view wx:if="{{hasPrivate}}" class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="快递箱密码、手机号等私密信息（仅可被领取者看到）" style="height: 4em" bindconfirm="setHiddenMsg" value="{{hiddenMsg}}" name="hiddenMsg" disabled='{{!canModify}}'/>
                </view>
            </view>
        </view>
        <view class="weui-cells__title"></view>
        <view class="weui-cells weui-cells_after-title">
            <navigator url="../myinfo/myinfo" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="{{publisher.avatar}}" class='avatar-sm avatar-circle'></image>
                </view>
                <view class="weui-cell__bd">发布人</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">{{publisher.username}}</view>
            </navigator>
            <navigator url="../myinfo/myinfo?id={{hunter.openid}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="{{hunter.avatar}}" class='avatar-sm avatar-circle'></image>
                </view>
                <view class="weui-cell__bd"> 领取人</view>
                <view wx:if="{{hunter == null}}" class="weui-cell__ft weui-cell__ft_in-access">待领取</view>
                <view wx:else class="weui-cell__ft weui-cell__ft_in-access">{{hunter.username}}</view>
            </navigator>
        </view>
        <button wx:if="{{canModify}}" bindtap='submit' class="weui-btn" type="primary">更新</button>
        <button wx:if="{{canModify && status > 0 && status < 4}}" bindtap="cancel" class="weui-btn" type="warn">取消任务</button>
        <button wx:elif="{{!canModify && status<=1}}" bindtap='getTask' class="weui-btn" type="primary">领取</button>
        <button wx:elif="{{!canModify && !canAccess && status > 1}}" disabled='true' class="weui-btn" type="primary">已领取</button>
        <button wx:if="{{canModify && status == 4}}" bindtap="cancel" class="weui-btn" type="warn">从记录中删除</button>
    </view>
</form>
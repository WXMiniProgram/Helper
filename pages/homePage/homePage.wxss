/**homePage.wxss**/
.homepage-container{
  height:100%;
  display:flex;
  flex-direction: column;
  align-items: center;
}

.homepage-top{
  line-height: 40px;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-bottom:1px solid #999;
}

.homepage-top-left{
  width:65%;
  display: flex;
  flex-direction: row;
  border-right: 1px solid #999;
}

.homepage-top-right{
  width:35%;
  display: flex;
  flex-direction: row;
}

.picker-view{
  display:flex;
  flex-direction: row;
}

.homepage-top-icon{
  padding-top: 5px;
  padding-right: 8px;
  padding-left: 5px;
}

.task-list{
  width: 85%;
  height: 125px;
  display:flex;
  flex-direction: column;
  margin-top: 15px;
  padding-top: 8px;
  background-color: red;
  position:relative;
}

.task-list-top{
  height: 30%;
  padding-left: 8px;
  background-color: yellow;
}

.task-list-bottom{
  height:100%;
  display:flex;
  flex-direction: row;
  background-color: yellowgreen;
}

.task-list-bottom-left{
  width:60%;
  display: flex;
  align-items: center;
  padding-left: 8px;
  font-size: 25px;
  background-color: bisque;
}

.task-list-bottom-right{
  width:40%;
  display:flex;
  flex-direction: column-reverse;
  background-color: azure;
}

.task-list-bottom-right-reward{
  background-color: rosybrown;
}

.task-list-bottom-right-location{
  background-color: darkseagreen;
}

.task-list-bottom-right-time{
  background-color: palegoldenrod;
}

.homepage-bottom{
  width: 85%;
  height: 17%;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: powderblue;
}

.homepage-bottom-left-right{
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  background-color: blue;
}

.homepage-bottom-center{
  width: 30%;
  height: 100%;
  margin-left: 8px;
  margin-right: 8px;
  display: flex;
  align-items: center;
  background-color: blue;
}

.circle-button{
  border-radius: 40px;
}
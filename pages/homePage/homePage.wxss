/**homePage.wxss**/
.homepage-container{
  height:100%;
  display:flex;
  flex-direction: column;
  align-items: center;
}

.homepage-top{
  line-height: 40px;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #efeff4;
}

.homepage-top-left{
  flex-grow: 1;
}

.homepage-top-right{
  flex-grow: 2;
}

.picker-view{
  display:flex;
  flex-direction: row;
}

.homepage-top-icon{
  padding-right: 8px;
  padding-left: 8px;
}

.taskcard{
  width: 85%;
}

.homepage-bottom{
  width: 100%;
  height: 17%;
  margin-bottom: 8px;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.homepage-bottom-hide{
    display: none;
}

.homepage-bottom-right{
  width: 20%;
  height: 17%;
  position: fixed;
  right: 35px;
  display: flex;
  align-items: center;
}

.homepage-bottom-center{
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
}

.circle-button{
  height: 40px;
  width: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.circle-button-hover{
    background-color: red;
}

.create-button{
  height: 83px;
  width: 83px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.homepage-bottom-icon{
  font-size: 25px;
}

.homepage-create-icon{
  font-size: 45px;
}

.weui-search-bar {
    padding: 2px 3px;
    border-top: 0;
    border-bottom: 0
}

.weui-panel {
    margin-top: 30rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    border-radius: 10px;
    background-color: white;
}

.right-tag {
    color: greenyellow;
    float: right;
    margin-right: 20rpx;
}
/**homePage.wxss**/
.homepage-container{
  height:100%;
  display:flex;
  flex-direction: column;
  align-items: center;
}

.homepage-top{
  line-height: 40px;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.homepage-top-left{
  flex-grow: 1;
}

.weui-search-bar__form {
    border: none;
    border-radius: 10%;
}

.homepage-top-right{
  flex-grow: 2;
    background-color: white;
}

.picker-view{
  display:flex;
  flex-direction: row;
}

.homepage-top-icon{
  padding-right: 8px;
  padding-left: 8px;
}

.taskcard{
  width: 85%;
}

.homepage-bottom{
  width: 100%;
  height: 17%;
  margin-bottom: 8px;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.homepage-bottom-hide{
    display: none;
}

.homepage-bottom-right{
  width: 20%;
  height: 17%;
  position: fixed;
  right: 35px;
  display: flex;
  align-items: center;
}

.homepage-bottom-center{
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
}

.circle-button{
  height: 40px;
  width: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.circle-button::after{
    border: none;
}

.create-button{
  height: 83px;
  width: 83px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.homepage-bottom-icon{
  font-size: 25px;
}

.homepage-create-icon{
  font-size: 45px;
}

.weui-search-bar {
    padding: 3px;
    border-top: 0;
    border-bottom: 0
}

.weui-panel {
    margin-top: 30rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    border-radius: 10px;
    background-color: white;
}

.right-tag {
    font-size: 40rpx;
    color: #A5DEE4;
    float: right;
    font-family: Arial, Helvetica, sans-serif;
    margin-right: 20rpx;
}

.stamp-done:after {
    content:"已完成";
    position:absolute;
    top:120rpx;
    right:90rpx;
    z-index:1;
    font-family:Arial,sans-serif;
    -webkit-transform: rotate(-35deg); /* Safari */
    -moz-transform: rotate(-35deg); /* Firefox */
    -ms-transform: rotate(-35deg); /* IE */
    -o-transform: rotate(-35deg); /* Opera */
    transform: rotate(-35deg);
    font-size:30px;
    color: #A5DEE4;
    border:solid 4px #A5DEE4;
    padding:5px;
    border-radius:10px;
    zoom:1;
    filter:alpha(opacity=20);
    opacity:0.3;
    -webkit-text-shadow: 0 0 2px #A5DEE4;
    text-shadow: 0 0 2px #A5DEE4;
    box-shadow: 0 0 2px #A5DEE4;
}

.stamp-undone:after {
    content:"进行中";
    position:absolute;
    top:120rpx;
    right:90rpx;
    z-index:1;
    font-family:Arial,sans-serif;
    -webkit-transform: rotate(-35deg); /* Safari */
    -moz-transform: rotate(-35deg); /* Firefox */
    -ms-transform: rotate(-35deg); /* IE */
    -o-transform: rotate(-35deg); /* Opera */
    transform: rotate(-35deg);
    font-size:30px;
    color: rgb(254, 223, 225);
    border:solid 4px rgb(254, 223, 225);
    padding:5px;
    border-radius:10px;
    zoom:1;
    filter:alpha(opacity=20);
    opacity:0.3;
    -webkit-text-shadow: 0 0 2px rgb(254, 223, 225);
    text-shadow: 0 0 2px rgb(254, 223, 225);
    box-shadow: 0 0 2px rgb(254, 223, 225);
}

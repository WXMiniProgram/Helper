<view class="page">
    <view class="page__hd">
        <view class="page__title">身份验证</view>
        <view class="page__desc">上传学生证正面（有头像的那面）照片</view>
    </view>
    <button wx:if="{{file == null}}" class="weui-btn" type="primary"  bindtap="chooseImg">选择图片</button>
    <view wx:else>
        <image src="{{file}}"></image>
        <button class="weui-btn" type="primary" bindtap='uploadImg'>上传</button>
    </view>
    
</view>
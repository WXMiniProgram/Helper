/* 这里的样式只应用于这个自定义组件 */

@import "../../lib/style/lib.wxss";

.task-list{
  width: 100%;
  height: 105px;
  display:flex;
  flex-direction: column;
  margin-top: 15px;
  padding-top: 8px;
  position:relative;
  border: 1px solid #999;
  border-radius: 8px;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #b8b7b7;
  /*background-image: url('../../images/im01.jpg');*/
  background-color: papayawhip;
}

.task-list-top{
  height: 30%;
  padding-left: 8px;
  padding-bottom: 2px;
  border-bottom: 1px solid #C2C2C2;
}

.task-list-bottom{
  height:100%;
  display:flex;
  flex-direction: row;
}

.task-list-bottom-left{
  width:60%;
  display: flex;
  align-items: center;
  padding-left: 8px;
  font-size: 25px;
}

.task-list-bottom-right{
  width:40%;
  display:flex;
  flex-direction: column-reverse;
}

.task-list-bottom-right-reward{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.task-list-bottom-right-location{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.task-list-bottom-right-time{
  display: flex;
  flex-direction: row;
  overflow: hidden; 
  text-overflow: ellipsis; 
  white-space: nowrap;
}
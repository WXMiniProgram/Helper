/* 这里的样式只应用于这个自定义组件 */

@import "../../lib/style/lib.wxss";

.task-list{
  width: 100%;
  height: 125px;
  display:flex;
  flex-direction: column;
  margin-top: 15px;
  padding-top: 8px;
  background-color: red;
  position:relative;
}

.task-list-top{
  height: 30%;
  padding-left: 8px;
  background-color: yellow;
}

.task-list-bottom{
  height:100%;
  display:flex;
  flex-direction: row;
  background-color: yellowgreen;
}

.task-list-bottom-left{
  width:60%;
  display: flex;
  align-items: center;
  padding-left: 8px;
  font-size: 25px;
  background-color: bisque;
}

.task-list-bottom-right{
  width:40%;
  display:flex;
  flex-direction: column-reverse;
  background-color: azure;
}

.task-list-bottom-right-reward{
  display: flex;
  flex-direction: row;
  background-color: rosybrown;
}

.task-list-bottom-right-location{
  display: flex;
  flex-direction: row;
  background-color: darkseagreen;
}

.task-list-bottom-right-time{
  display: flex;
  flex-direction: row;
  background-color: palegoldenrod;
}

<!--pages/createTask/createTask.wxml-->
<form bindsubmit='formSubmit' class='page create-form'>
    <view class='page__bd page__bd_spacing'>
        <view class="weui-cells__title">标题（必填）：</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="简洁的叙述求助内容" />
                </view>
            </view>
        </view>

        <view class="weui-cells__title">详细信息</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">奖金(元)</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="selector" value="{{bountyArray[0]}}" range="{{bountyArray}}" bindchange="bindBountyChange">
                        <view class="weui-input">{{bountyArray[bountyIndex]}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">截止日期</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
                        <view class="weui-input">{{date}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">截止时间</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                        <view class="weui-input">{{time}}</view>
                    </picker>
                </view>
            </view>
        </view>
        <view class="weui-cells__title">任务地点：</view>
        <view class="weui-cells weui-cells_after-title">
            <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">{{location.name}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">请选择</view>
            </navigator>
        </view>

        <view class="weui-cells__title">任务详情</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="此详情为公开信息，请不要在此填入类似 快递箱密码 等重要信息（如有，请开启 '使用隐藏信息' 中）" style="height: 4em" />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
            </view>
            <view class="weui-cell weui-cell_switch">
                <view class="weui-cell__bd">使用隐藏信息</view>
                <view class="weui-cell__ft">
                    <switch bindchange='bindSwitchChange'/>
                </view>
            </view>
            <view wx:if="{{hasPrivate}}" class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="如有快递箱密码等信息可在此填入以让帮助者顺利地帮到你（此处信息仅可被领取者看到）" style="height: 4em" />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
            </view>
        </view>
        <view class="weui-cells__title"></view>
        <view class="weui-cells weui-cells_after-title">
            <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="../../images/bg01.jpg" class='avatar-sm avatar-circle'></image>
                </view>
                <view class="weui-cell__bd">发布人</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">cuttlefish</view>
            </navigator>
            <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="../../images/bg01.jpg" class='avatar-sm avatar-circle'></image>
                </view>
                <view class="weui-cell__bd">领取人</view>
                <view wx:if="{{hunter_info == null}}" class="weui-cell__ft weui-cell__ft_in-access">待领取</view>
                <view wx:else class="weui-cell__ft weui-cell__ft_in-access">For Smurf's sake</view>
            </navigator>
        </view>
        <button wx:if="{{isPublisher && task_status == 0}}" class="weui-btn" type="primary">发布</button>
        <button wx:elif="{{isPublisher && (task_status == 1 || task_status == 2 || task_status == 3)}}" class="weui-btn" type="primary">更新</button>
        <button wx:elif="{{!isPublisher && task_status == 1}}" class="weui-btn" type="primary">领取</button>
        <button wx:elif="{{!isPublisher && task_status > 1}}" disabled='true' class="weui-btn" type="primary">已领取</button>
        <button wx:if="{{isPublisher && task_status < 4}}" class="weui-btn" type="warn">取消任务</button>
        <button wx:if="{{isPublisher && task_status == 4}}" class="weui-btn" type="warn">从记录中删除</button>
    </view>
  </form>

